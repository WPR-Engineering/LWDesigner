%table{:class => "table"}
  %thead
    %tr
      %th Author
      %th Date
      %th event
      %th Item Changed
      %th version
      %th Difference

  %tbody{:style => "text-align: center"}
    - @node_gpio.own_and_associated_audits.limit(5).each do |rev|
      %tr

        %td=find_change_user(rev.user_id)
        %td=rev.created_at.in_time_zone('America/Chicago')
        %td=rev.action
        %td=rev.auditable_type
        %td=rev.version
        %td= link_to 'Diff', diff_gpio_node_gpio_audit_path(@node_gpio, rev.id)
