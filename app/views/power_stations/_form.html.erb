
<%= simple_form_for(@power_station) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :hostname %>
    <%= f.input :location %>
    <%= f.input :macAddress %>
    <%= f.input :ipAddress %>
    <%= f.input :subnetmask %>
    <%= f.input :serialNumber %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
