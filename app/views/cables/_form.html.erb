
<%= simple_form_for(@cable) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :number %>
    <%= f.input :type %>
    <%= f.input :color %>
    <%= f.input :termination %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
