<p id="notice"><%= notice %></p>

<h1>Nodes</h1>

<table>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Location</th>
      <th>Ipaddress</th>
      <th>Subnetmask</th>
      <th>Nodetype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.hostname %></td>
        <td><%= node.location %></td>
        <td><%= node.ipAddress %></td>
        <td><%= node.subnetMask %></td>
        <td><%= node.nodeType %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

