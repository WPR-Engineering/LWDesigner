%p#notice= notice

%p
  %b Name:
  = @node.hostname

%p
  %b Location:
  = @node.location

%div{:class => "table1"}
  %h3 Inputs
  #ins
  - @node.node_inputs.each do |node_input|
    %p{:class => "input"}= node_input.name
    %p{:class => "input"}= node_input.notes


  %h3 Outputs
  #ins
  - @node.node_outputs.each do |node_output|
    %p{:class => "input"}= node_output.outputDescription
    %p{:class => "input"}= node_output.notes

= link_to 'Edit', edit_node_path(@node)
